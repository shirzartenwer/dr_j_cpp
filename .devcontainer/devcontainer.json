{
    "name": "C++ Dev Container",
    "build": {
        "dockerfile": "../Dockerfile"
    },
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.shell.linux": "/bin/zsh"
            }
        }
    },
    "extensions": [
        "ms-vscode.cpptools"
    ],
    "postCreateCommand": "cmake . && echo 'CMake configuration complete' && ls -la"
}